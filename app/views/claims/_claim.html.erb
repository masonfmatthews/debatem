<div class="detail-box proposition">
  <h3><%= claim.claim %></h3>
  <p>
    <%= link_to "Supporting Data", claim.data_url %>
  </p>
  <blockquote>
    <p><%= claim.warrant %></p>
    <footer><%= claim.user_name %></footer>
  </blockquote>
  <p>
    <%= link_to '<i class="glyphicon glyphicon-thumbs-up"></i> Write Agreement'.html_safe,
        nil, #new_claim_path(parent: , positive: true),
        class: "wide-link text-success over-overlay" %>
    <%= link_to '<i class="glyphicon glyphicon-thumbs-down"></i> Write Disagreement'.html_safe,
        nil, #new_claim_path(parent: , positive: false),
        class: "wide-link text-danger over-overlay" %>
    <%= link_to '<i class="glyphicon glyphicon-eye-open"></i> View Arguments'.html_safe,
        nil,
        class: "wide-link over-overlay" %>
  </p>
</div>
