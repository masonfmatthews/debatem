<div class="right-link">
  <% if @position.parent %>
    <%= link_to "Return to Argument", [@position.proposal, @position.parent] %>
  <% else %>
    <%= link_to "Return to Proposal", @position.proposal %>
  <% end %>
</div>

<h1>New Response</h1>

<% if @position.errors.any? %>
  <div class="alert alert-danger">
    <p><%= pluralize(@position.errors.count, "error") %> prohibited this record from being saved:</p>
    <ul>
      <% @position.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h3>
  You are writing
  <%= @position.agree ? '<span class="text-success">an Agreement</span>'.html_safe :
        '<span class="text-danger">a Disagreement</span>'.html_safe %>
  with:
</h3>
<div class="detail-box">
  <h3>
    <%= @position.subject.title %>
  </h3>
  <blockquote>
    <p><%= @position.subject.body %></p>
    <footer><%= @position.subject.user_name %></footer>
  </blockquote>
</div>

<%= form_for [@position.proposal, @position] do |f| %>
  <%= f.hidden_field :proposal_id %>
  <%= f.hidden_field :parent_id %>
  <%= f.hidden_field :agree %>

  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :name, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", rows: 8 %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
