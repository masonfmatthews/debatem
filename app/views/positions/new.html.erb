<div class="right-link">
  <%= link_to "Return to Proposal", @position.proposal %>
</div>

<h1>New Response</h1>

<% if @position.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@position.errors.count, "error") %> prohibited this assignment from being saved:</h2>

    <ul>
    <% @position.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [@position.proposal, @position] do |f| %>
  <%= f.hidden_field :proposal_id %>
  <%= f.hidden_field :parent_id %>
  <%= f.hidden_field :agree %>

  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :name, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", rows: 8 %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
