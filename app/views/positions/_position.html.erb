<div class="detail-box position" onclick="location.href='<%= proposal_position_path(position.proposal, position) %>';">
  <div class="row">
    <div class="col-md-9">
      <% if position.agree %>
        <h3 class="text-success">
          <i class="glyphicon glyphicon-thumbs-up"></i>
          <%= position.title %>
        </h3>
      <% else %>
        <h3 class="text-danger">
          <i class="glyphicon glyphicon-thumbs-down"></i>
          <%= position.title %>
        </h3>
      <% end %>
      <blockquote>
        <p><%= position.body %></p>
        <footer><%= position.user_name %></footer>
      </blockquote>
      <p>
        <%= link_to '<i class="glyphicon glyphicon-eye-open"></i> View Sub-arguments'.html_safe, [position.proposal, position], class: "wide-link" %>
      </p>
    </div>
    <div class="col-md-3 side">
      <div class="side-count">
        <div class="lead">+<%= position.agreements.count %> agree</div>
        <a>Write an Agreement</a>
      </div>
      <div class="side-count">
        <div class="lead">-<%= position.disagreements.count %> disagree</div>
        <a>Write a Disagreement</a>
      </div>
    </div>
  </div>
</div>
